<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.todo.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ToDoServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.ToDoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.AuthServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.RegServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HumanServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.HumanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemCategoryServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.ItemCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ToDoServlet</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HumanServlet</servlet-name>
        <url-pattern>/humans</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemCategoryServlet</servlet-name>
        <url-pattern>/additem</url-pattern>
    </servlet-mapping>
</web-app>
